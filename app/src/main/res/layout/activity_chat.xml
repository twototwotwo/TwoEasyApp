<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.EasyChange.FullscreenContainer"
    tools:context=".activity.ChatActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow"/>
        <TextView
            android:id="@+id/top_name_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/open_eye_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/open_eye"
            android:background="@drawable/selector_button"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/open_eye_video_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/open_eye_video_container"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/switch_camera_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:src="@drawable/switch_icon"
            android:onClick="switchCamera"
            android:scaleType="fitXY"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/selector_button"
            android:adjustViewBounds="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_radius_10dp"
        android:backgroundTint="@color/cyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.wsjiu.twoEasy.component.AdaptionImageView
            android:id="@+id/goods_cover"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sell_price"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:padding="5dp"
                android:background="@drawable/shape_radius_10dp"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/goods_title"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
            android:id="@+id/buy"
            android:text="立即购买"
            android:textColor="@color/white"
            android:background="@drawable/shape_radius_10dp"
            android:backgroundTint="@color/water_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:layout_marginVertical="20dp"
        android:id="@+id/message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/input_text_view"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/send_button"
            android:onClick="sendMessage"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="5dp"
            android:contentDescription="发送"
            android:src="@drawable/send_icon"
            android:background="@drawable/selector_button"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>