<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dim_white"
    android:paddingTop="10dp"
    tools:context=".activity.ui.main.PersonFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shape_radius_5dp"
        android:backgroundTint="@color/water_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.wsjiu.twoEasy.component.AdaptionImageView
            android:id="@+id/head_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佚名"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/edit_button"
                    android:background="@drawable/shape_radius_5dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="编辑"
                    android:layout_marginStart="20dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/logout_button"
                    android:background="@drawable/shape_radius_5dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="注销"
                    android:layout_marginStart="10dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:id="@+id/follow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/border_radius_10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/follow_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="关注"
                        android:padding="3dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/declaration_view"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shape_radius_10dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/subscribed_button"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/subscribed_icon"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/subscribed_text_view"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="订阅"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/published_button"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/published_icon"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/published_text_view"
                android:padding="5dp"
                android:text="发布"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sold_button"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/sold_icon"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sold_text_view"
                android:padding="5dp"
                android:text="卖出"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buy_in_button"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/buy_in_icon"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/buy_in_text_view"
                android:padding="5dp"
                android:text="买进"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_recycler_view"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>