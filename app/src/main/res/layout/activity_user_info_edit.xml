<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activity.UserInfoEditActivity">
    <FrameLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:onClick="back"
            android:src="@drawable/arrow"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="个人信息"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <cn.wsjiu.twoEasy.component.AdaptionImageView
            android:id="@+id/head_image_view"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/edit_head_button"
            android:src="@drawable/edit_icon"
            android:onClick="editHead"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
    <TextView
        android:text="昵称"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/nick_name_edit_view"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="签名"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/declaration_edit_view"
        android:hint="请填写你的个人签名"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="修改支付密码(可选)"
        android:background="@drawable/horizontal_cycle_border"
        android:backgroundTint="@color/gray"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pay_password_edit_view"
            android:hint="请输入支付密码验证"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/black"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/new_pay_password_edit_view"
            android:hint="请输入新支付密码"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/confirm_new_pay_password_edit_view"
            android:hint="请再次输入新支付密码"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="editFinish"
            android:text="修改完成"
            android:layout_marginTop="10dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="10dp"
            android:background="@drawable/shape_radius_20dp"
            android:backgroundTint="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>